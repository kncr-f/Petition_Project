<h2>Edit your Profile</h2>
{{#editUserData}}
    <div class="form">

        <form action="" method="POST">
            <div class="name_block flex-row edit_profile_form">
                <label for="first">Name:</label>
                <input type="text" name="first" id="" value="{{first_name}}" />

                <label for="last">Last Name:</label>
                <input type="text" name="last" id="" value="{{last_name}}" />

                <label for="email">Email Address:</label>
                <input type="text" name="email" id="" value="{{email}}" />

                <label for="password">Password:</label>
                <input type="text" name="password" id="" />

                <label for="age">Age:</label>
                <input type="text" name="age" id="" value="{{age}}" />

                <label for="city">City:</label>
                <input type="text" name="city" id="" value="{{city}}" />

                <label for="url">Homepage:</label>
                <input type="text" name="url" id="" value="{{url}}" />

            </div>

            <div class="buttons flex-row">
                <button type="submit" id="submit_button">UPDATE</button>

            </div>

        </form>

    </div>
{{/editUserData}}